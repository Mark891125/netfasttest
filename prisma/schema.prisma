datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model TestResult {
    id String @id

    clientTime    DateTime?
    receptionTime DateTime?
    returnTime    DateTime?
    delay         Int
    ip            String
    location      String? // 可选字段

    storeID   String
    storeName String?
    tiiID     String?

    store Store @relation(fields: [storeID], references: [code])
}

model Store {
    id      String @id
    code    String @unique
    name    String
    address String

    latitude  Float?
    longitude Float?

    TestResult TestResult[]
}
